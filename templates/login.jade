extends ./layout.jade

block head
    title 登录

block content
    div(ng-controller="LoginController")
        div.login.panel.panel-default(style="width:500px;margin:auto;")
            div.panel-heading 请登录
            div.panel-body
                form.form-horizontal
                    div.form-group
                        label.col-sm-3.control-label 邮箱/昵称
                        div.col-sm-9
                            input.form-control(type="text", placeholder="邮箱/昵称", ng-model="name")
                    div.form-group
                        label.col-sm-3.control-label 密码
                        div.col-sm-9
                            input.form-control(type="password", placeholder="密码", ng-model="password")
                    div.form-group
                        div.col-sm-offset-3.col-sm-9.text-right
                            button.btn.btn-primary(ng-click="login()") 登录

block javascript
    script(src="/static/js/page/login.js")